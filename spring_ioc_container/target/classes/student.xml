<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
    <bean id="mystudent" class="spring_ioc_container.constructor_injection.Student">
    <constructor-arg name="name" value="sridhar"  ></constructor-arg>
    <constructor-arg name="gender" value="male"  ></constructor-arg>
    <constructor-arg name="college" value="MRCE"  ></constructor-arg>
    <constructor-arg name="percentage" value="75.6"  ></constructor-arg>
    
    </bean>
   

</beans>